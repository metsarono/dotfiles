"resource/layout/downloadsummarypanel.layout"
{
	styles {

		CDownloadSummaryPanel {
			render_bg {
				0="fill( x0, y0, x1, y1, AirBlock )"
			}
		}

		GraphPanel {
			bgcolor=none
		}

		infoGraphic {
			inset="3 3 3 3"
		}

		LabelDwnld {
			font-weight=700
		}

		container {
			bgcolor="none"
		}

		label {
			textcolor=label2
		}

		bigtext {
				textcolor=label
		}

		bigtextlabel {
				textcolor=label2
		}

		bigtextHeader {
				textcolor=label2
		}

		bigTextNumbers {
				textcolor=Text
		}
	}

	layout {

		region { name=global height=max width=max }
				region { name=info region=global height=max width=max align=top }

		place { control="GraphPanel" region=global width=max height=max margin-right=3 margin-top=42 }

		place { control="pauseresumeallbutton" region=info align=right y=8 margin-right=16 }

		place { control="header" region=info y=11 margin-left=16 }
				place { region=info control="download_rate,download_rate_value" 			x=16 spacing=8 start=header }
		place { region=info control="peak_download_rate,peak_download_rate_value" x=16 spacing=8 start=download_rate_value }
		place { region=info control="total_downloaded,total_downloaded_value" 		x=16 spacing=8 start=peak_download_rate_value }
		place { region=info control="blackout_label,blackout_value" 							x=16 spacing=8 start=total_downloaded_value }
		place { region=info control="throttling_label,throttling_value" 					x=16 spacing=4 start=blackout_value }
		place { region=info control="disk_status_label" 													x=16 spacing=8 start=throttling_value }
	}
}
